<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenteeInfoActivity"
        android:background="@color/color_bg_secondary">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarMenteeInfo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@color/color_bg_primary"
            android:fontFamily="@font/font_ibm_plex_sans_bold"
            android:minHeight="?android:attr/actionBarSize">
        <TextView
                android:id="@+id/mentee_info_title"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_ibm_plex_sans_bold"
                android:textColor="@color/color_text_primary"
                android:textSize="22sp">
        </TextView>
        <ImageView
                android:id="@+id/mentee_info_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/round_message_24"
                android:layout_marginEnd="10dp"
                app:tint="@color/color_primary"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
            android:id="@+id/mentee_info_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/color_text_primary"
            android:background="@drawable/bg_secondary_circular"
            android:backgroundTint="@color/color_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarMenteeInfo" />
    <TextView
            android:id="@+id/mentee_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mentee_info_icon"
            android:gravity="center"
            android:textColor="@color/color_text_primary"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="19sp"/>
    <TextView
            android:id="@+id/mentee_info_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mentee_info_name"
            android:gravity="center"
            android:textColor="@color/color_text_secondary"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:text="@string/mentee_info_term"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mentee_info_term"
            android:fillViewport="true"
            android:layout_marginTop="20dp">
        <LinearLayout
                android:paddingTop="80dp"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:text="@string/title_thanks_short"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ListView
                    android:id="@+id/mentee_info_thanks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_secondary_rounded"
                    android:backgroundTint="@color/color_bg_primary"
                    android:divider="@color/color_bg_secondary"
                    android:dividerPadding="3dp"
                    android:dividerHeight="1dp"
                    android:layout_marginBottom="25dp"/>

            <TextView
                    android:text="@string/title_kind_short"
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/mentee_info_kind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_secondary_rounded"
                    android:backgroundTint="@color/color_bg_primary"
                    android:padding="12dp"
                    android:textColor="@color/color_text_primary"
                    android:textSize="16sp"
                    android:layout_marginBottom="25dp"/>
            <TextView
                    android:text="@string/title_save_short"
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/mentee_info_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_secondary_rounded"
                    android:backgroundTint="@color/color_bg_primary"
                    android:padding="12dp"
                    android:textColor="@color/color_text_primary"
                    android:textSize="16sp"
                    android:layout_marginBottom="25dp"/>
            <TextView
                    android:text="@string/title_book_short"
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/mentee_info_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_secondary_rounded"
                    android:backgroundTint="@color/color_bg_primary"
                    android:padding="12dp"
                    android:textColor="@color/color_text_primary"
                    android:textSize="16sp"
                    android:layout_marginBottom="25dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>