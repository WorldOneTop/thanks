<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserInfoActivity"
        android:orientation="vertical"
        android:background="@color/color_bg_secondary"
        android:fitsSystemWindows="true">



        <ImageView
                android:id="@+id/infoClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_close_24"
                android:background="@drawable/bg_secondary_circular"
                android:backgroundTint="@color/blue_100"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="12dp"
                app:tint="@color/color_primary" />
        <TextView
                android:id="@+id/infoLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:textColor="@color/color_primary"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="12dp"/>

    <TextView
            android:id="@+id/infoName"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/color_text_primary"
            android:background="@drawable/bg_secondary_circular"
            android:backgroundTint="@color/color_secondary"/>
    <TextView
            android:id="@+id/infoFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infoName"
            android:gravity="center"
            android:textColor="@color/color_text_primary"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/infoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infoFullName"
            android:gravity="center"
            android:textSize="17sp"/>

    <TextView
            android:id="@+id/infoHistoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/infoId"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="15sp"
            android:text="@string/info_tab_history" />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="12dp"
            android:background="@color/color_bg_primary"
            app:layout_constraintTop_toBottomOf="@id/infoHistoryTitle">
        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:columnCount="2">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/color_text_primary"
                    android:text="@string/info_signup_date"/>
            <TextView
                    android:id="@+id/infoSignupdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="0"
                    android:layout_gravity="end"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_columnSpan="2"
                    android:background="@color/color_bg_secondary"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_text_primary"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_activity_days"/>
            <TextView
                    android:id="@+id/infoActivityDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="0"
                    android:layout_gravity="end"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_columnSpan="2"
                    android:background="@color/color_bg_secondary"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_text_primary"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_doc_count"/>
            <TextView
                    android:id="@+id/infoDocCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="0"
                    android:layout_gravity="end"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_columnSpan="2"
                    android:background="@color/color_bg_secondary"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_text_primary"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:text="@string/title_thanks_word"/>
            <TextView
                    android:id="@+id/infoThanksCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="0"
                    android:layout_gravity="end"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_columnSpan="2"
                    android:background="@color/color_bg_secondary"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_text_primary"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:text="@string/title_kind"/>
            <TextView
                    android:id="@+id/infoKindCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="0"
                    android:layout_gravity="end"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_columnSpan="2"
                    android:background="@color/color_bg_secondary"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_text_primary"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:text="@string/title_save"/>
            <TextView
                    android:id="@+id/infoSaveCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="0"
                    android:layout_gravity="end"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_columnSpan="2"
                    android:background="@color/color_bg_secondary"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_text_primary"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/title_book"/>
            <TextView
                    android:id="@+id/infoBookCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="0"
                    android:layout_gravity="end"/>
        </GridLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>