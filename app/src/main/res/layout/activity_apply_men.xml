<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_secondary"
        tools:context=".ApplyMenActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarApplyMen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bg_primary"
            app:layout_constraintTop_toTopOf="parent"
            android:fitsSystemWindows="true" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvApplyMen"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/toolbarApplyMen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>