<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/color_bg_primary"
        app:cardCornerRadius="12dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        app:cardElevation="2dp">

<GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:padding="10dp"
        android:rowCount="2">
    <TextView
            android:id="@+id/applyMenId"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_text_primary"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/applyMenStatus"
            android:layout_columnSpan="2"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:textColor="@color/color_text_primary"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/applyMenSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_white"
            android:layout_gravity="end"
            android:layout_rowSpan="2"
            android:textSize="14sp"
            android:text="@string/apply_men_submit"
            android:textAllCaps="false"
            android:padding="4dp"/>
    <TextView
            android:id="@+id/applyMenStartDate"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:text=" ~ "
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
    <TextView
            android:id="@+id/applyMenEndDate"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



</GridLayout>
</androidx.cardview.widget.CardView>
