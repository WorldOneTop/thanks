<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenteeManageActivity"
        android:background="@color/color_bg_secondary">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarMenteeManage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/color_bg_primary"
                android:fitsSystemWindows="true"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/font_ibm_plex_sans_bold"
                android:minHeight="?android:attr/actionBarSize">

            <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_ibm_plex_sans_bold"
                    android:text="@string/menu_manage_mentee"
                    android:textColor="@color/color_text_primary"
                    android:textSize="22sp">
            </TextView>
        </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMenteeManage"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@id/toolbarMenteeManage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>