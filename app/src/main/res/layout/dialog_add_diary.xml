<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/color_bg_secondary">

    <ImageView
            android:id="@+id/addDiaryClose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_close_24"
            android:background="@drawable/bg_secondary_circular"
            android:backgroundTint="@color/color_bg_tertiary"
            app:tint="@color/color_primary" />
    <TextView
            android:id="@+id/addDiarySubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/OK"
            android:textSize="17sp"
            android:textColor="@color/color_primary"
            android:backgroundTint="@color/blue_100"
            android:background="@drawable/bg_secondary_rounded"
            android:paddingHorizontal="10dp"
            android:paddingVertical="1dp"/>

    <ListView
            android:id="@+id/addDiaryThanks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:divider="@color/color_bg_secondary"
            android:dividerPadding="3dp"
            android:dividerHeight="1dp"
            android:backgroundTint="@color/color_bg_primary"
            android:background="@drawable/bg_secondary_rounded"
            app:layout_constraintTop_toBottomOf="@id/addDiaryClose"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:listSelector="@android:color/transparent"/>
    <EditText
            android:id="@+id/addDiaryEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/addDiaryThanks"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_secondary_rounded"
            android:backgroundTint="@color/color_bg_primary"
            android:minHeight="30dp"
            android:padding="10dp"
            android:inputType="textMultiLine" />
</androidx.constraintlayout.widget.ConstraintLayout>