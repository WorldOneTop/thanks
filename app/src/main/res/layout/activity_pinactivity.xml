<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_secondary"
        tools:context=".PINActivity">

    <ImageView
            android:id="@+id/pinIcon"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/pinTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/color_text_primary"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:text="@string/pin_check_title"
            app:layout_constraintTop_toBottomOf="@id/pinIcon"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/pinText"
            app:layout_constraintBottom_toBottomOf="@id/pinText"
            app:layout_constraintStart_toEndOf="@id/pinText"
            android:src="@drawable/ic_baseline_lock_24"
            app:tint="@color/color_text_secondary"
            android:layout_marginStart="-5dp"/>
    <EditText
            android:id="@+id/pinText"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:maxWidth="300dp"
            android:enabled="false"
            android:backgroundTint="@color/color_text_secondary"
            android:inputType="numberPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pinTitle"/>
    <TextView
            android:id="@+id/pinRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pin_remove"
            android:textColor="@color/color_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pinText"
            android:visibility="gone"/>
    <GridLayout
            android:id="@+id/pinInpuLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pinText"
            app:layout_constraintBottom_toBottomOf="parent"
            android:columnCount="3"
            android:rowCount="4">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:padding="20dp"
                android:text="1"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="25dp"
                android:background="?attr/selectableItemBackground"
                android:padding="18dp"
                android:text="2"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="25dp"
                android:background="?attr/selectableItemBackground"
                android:padding="18dp"
                android:text="3"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="25dp"
                android:background="?attr/selectableItemBackground"
                android:padding="18dp"
                android:text="4"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:textSize="25dp"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:padding="18dp"
                android:text="5"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="25dp"
                android:background="?attr/selectableItemBackground"
                android:padding="18dp"
                android:text="6"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="25dp"
                android:background="?attr/selectableItemBackground"
                android:padding="18dp"
                android:text="7"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:textSize="25dp"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:padding="18dp"
                android:text="8"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="25dp"
                android:background="?attr/selectableItemBackground"
                android:padding="18dp"
                android:text="9"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="25dp"
                android:background="?attr/selectableItemBackground"
                android:padding="18dp"
                android:text="â†"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="25dp"
                android:background="?attr/selectableItemBackground"
                android:padding="18dp"
                android:text="0"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="25dp"
                android:background="?attr/selectableItemBackground"
                android:padding="18dp"
                android:text="OK"/>

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>